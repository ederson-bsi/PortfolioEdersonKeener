@model ICollection<PortfolioEdersonKeener.Models.Marca>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    function ExcluirMarca(idMarca) {
        var redirectPage = "https://" + window.location.host + "/Marca/Excluir/" + idMarca;
        if (confirm("Deseja realmente excluir esta marca?")) {
            window.location.replace(redirectPage);
        }
    }
</script>

<h1>Lista de Marcas</h1>

<div class="form-group">
    @Html.ActionLink("Novo Cadastro", "Create", "Marca", null, new { @class = "btn btn-success"})
</div>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>CÓDIGO</th>
            <th>MARCA</th>
            <th>AÇÕES</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var marca in Model)
        {
        <tr>
            <td>@marca.Id</td>
            <td>@marca.Nome</td>
            <td>
                @Html.ActionLink("Editar", "Editar", "Marca", new { id = marca.Id}, new { @class = "btn btn-warning"})
                <button type="button" class="btn btn-danger" onclick="ExcluirMarca(@marca.Id)">Excluir</button>
            </td>
        </tr>
        }
    </tbody>
</table>

